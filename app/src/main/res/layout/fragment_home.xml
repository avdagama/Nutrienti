                <TextView
                    android:id="@+id/homeMacrosStreak2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="17"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="@+id/homeMacrosFitChart2"
                    app:layout_constraintEnd_toEndOf="@+id/homeMacrosFitChart2"
                    app:layout_constraintStart_toStartOf="@+id/homeMacrosFitChart2"
                    app:layout_constraintTop_toTopOf="@+id/homeMacrosFitChart2" />

                <com.txusballesteros.widgets.FitChart
                    android:id="@+id/homeMacrosFitChart3"
                    android:layout_width="38dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:animationMethod="overdraw"
                    app:layout_constraintBottom_toBottomOf="@+id/homeMacrosRectangle"
                    app:layout_constraintEnd_toEndOf="@+id/homeMacrosRectangle"
                    app:layout_constraintStart_toEndOf="@+id/homeMacrosFitChart2"
                    app:layout_constraintTop_toBottomOf="@+id/homeMacrosTitle"
                    app:layout_constraintVertical_bias="0.25"
                    app:strokeSize="12dp" />

                <TextView
                    android:id="@+id/homeMacrosStreak3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="17"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="@+id/homeMacrosFitChart3"
                    app:layout_constraintEnd_toEndOf="@+id/homeMacrosFitChart3"
                    app:layout_constraintStart_toStartOf="@+id/homeMacrosFitChart3"
                    app:layout_constraintTop_toTopOf="@+id/homeMacrosFitChart3" />

                <TextView
                    android:id="@+id/homeMacrosName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/poppins"
                    android:text="Protein"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/homeMacrosFitChart2"
                    app:layout_constraintStart_toStartOf="@+id/homeMacrosFitChart2"
                    app:layout_constraintTop_toBottomOf="@+id/homeMacrosFitChart2" />

                <TextView
                    android:id="@+id/homesMacrosName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/poppins"
                    android:text="Carbs"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/homeMacrosFitChart1"
                    app:layout_constraintStart_toStartOf="@+id/homeMacrosFitChart1"
                    app:layout_constraintTop_toBottomOf="@+id/homeMacrosFitChart1" />

                <com.txusballesteros.widgets.FitChart
                    android:id="@+id/homeMacrosFitChart1"
                    android:layout_width="38dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    app:animationMethod="overdraw"
                    app:layout_constraintBottom_toBottomOf="@+id/homeMacrosRectangle"
                    app:layout_constraintEnd_toStartOf="@+id/homeMacrosFitChart2"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="@+id/homeMacrosRectangle"
                    app:layout_constraintTop_toBottomOf="@+id/homeMacrosTitle"
                    app:layout_constraintVertical_bias=".25"
                    app:strokeSize="12dp" />

                <TextView
                    android:id="@+id/homeMacrosStreak1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="17"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="@+id/homeMacrosFitChart1"
                    app:layout_constraintEnd_toEndOf="@+id/homeMacrosFitChart1"
                    app:layout_constraintStart_toStartOf="@+id/homeMacrosFitChart1"
                    app:layout_constraintTop_toTopOf="@+id/homeMacrosFitChart1" />

                <TextView
                    android:id="@+id/homeMacrosName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/poppins"
                    android:text="Fats"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/homeMacrosFitChart3"
                    app:layout_constraintStart_toStartOf="@+id/homeMacrosFitChart3"
                    app:layout_constraintTop_toBottomOf="@+id/homeMacrosFitChart3" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/homeMacrosRectangle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/homeMacrosRectangle" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
