                    app:layout_constraintTop_toTopOf="@+id/homeFriendsRectangle" />

                <com.txusballesteros.widgets.FitChart
                    android:id="@+id/homeFriendsFitChart2"
                    android:layout_width="38dp"
                    android:layout_height="90dp"
                    app:animationMethod="overdraw"
                    app:layout_constraintBottom_toBottomOf="@+id/homeFriendsRectangle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/homeFriendsTitle"
                    app:layout_constraintVertical_bias="0.25"
                    app:strokeSize="12dp" />

                <TextView
                    android:id="@+id/homeFriendsStreak2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="17"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/homeFriendsFitChart2"
                    app:layout_constraintEnd_toEndOf="@+id/homeFriendsFitChart2"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintStart_toStartOf="@+id/homeFriendsFitChart2"
                    app:layout_constraintTop_toTopOf="@+id/homeFriendsFitChart2" />

                <com.txusballesteros.widgets.FitChart
                    android:id="@+id/homeFriendsFitChart3"
                    android:layout_width="38dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:animationMethod="overdraw"
                    app:layout_constraintBottom_toBottomOf="@+id/homeFriendsRectangle"
                    app:layout_constraintEnd_toEndOf="@+id/homeFriendsRectangle"
                    app:layout_constraintStart_toEndOf="@+id/homeFriendsFitChart2"
                    app:layout_constraintTop_toBottomOf="@+id/homeFriendsTitle"
                    app:layout_constraintVertical_bias="0.25"
                    app:strokeSize="12dp" />

                <TextView
                    android:id="@+id/homeFriendsStreak3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="17"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/homeFriendsFitChart3"
                    app:layout_constraintEnd_toEndOf="@+id/homeFriendsFitChart3"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintStart_toStartOf="@+id/homeFriendsFitChart3"
                    app:layout_constraintTop_toTopOf="@+id/homeFriendsFitChart3" />

                <TextView
                    android:id="@+id/homeFriendsName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/poppins"
                    android:text="Josh"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/homeFriendsFitChart2"
                    app:layout_constraintStart_toStartOf="@+id/homeFriendsFitChart2"
                    app:layout_constraintTop_toBottomOf="@+id/homeFriendsFitChart2" />

                <TextView
                    android:id="@+id/homeFriendsName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/poppins"
                    android:text="Alexander"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/homeFriendsFitChart1"
                    app:layout_constraintStart_toStartOf="@+id/homeFriendsFitChart1"
                    app:layout_constraintTop_toBottomOf="@+id/homeFriendsFitChart1" />

                <com.txusballesteros.widgets.FitChart
                    android:id="@+id/homeFriendsFitChart1"
                    android:layout_width="38dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    app:animationMethod="overdraw"
                    app:layout_constraintBottom_toBottomOf="@+id/homeFriendsRectangle"
                    app:layout_constraintEnd_toStartOf="@+id/homeFriendsFitChart2"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="@+id/homeFriendsRectangle"
                    app:layout_constraintTop_toBottomOf="@+id/homeFriendsTitle"
                    app:layout_constraintVertical_bias=".25"
                    app:strokeSize="12dp" />

                <TextView
                    android:id="@+id/homeFriendsStreak1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="17"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/homeFriendsFitChart1"
                    app:layout_constraintEnd_toEndOf="@+id/homeFriendsFitChart1"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintStart_toStartOf="@+id/homeFriendsFitChart1"
                    app:layout_constraintTop_toTopOf="@+id/homeFriendsFitChart1" />

                <TextView
                    android:id="@+id/homeFriendsName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/poppins"
                    android:text="Mahmoud"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/homeFriendsFitChart3"
                    app:layout_constraintStart_toStartOf="@+id/homeFriendsFitChart3"
                    app:layout_constraintTop_toBottomOf="@+id/homeFriendsFitChart3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/homeMacrosRectangle"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/rectangle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/homeMacrosTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins"
                    android:text="Macros"
                    android:textColor="#000000"
                    android:textSize="22sp"
